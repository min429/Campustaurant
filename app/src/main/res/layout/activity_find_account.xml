<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1.0">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.12"
            android:background="@color/PColor1">
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.156">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="0.5">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/spoon1"
                    android:scaleType="centerInside"></ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.5">
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.45"
            android:background="@color/background"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.33"
                android:text="혼자말고"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:gravity="bottom"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.33"
                android:textColor="@color/black"
                android:text="같이먹자"
                android:textSize="22sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.156">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.5">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_weight="0.5">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/spoon2"
                    android:scaleType="centerInside"></ImageView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.12"
            android:background="@color/PColor1">
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2560">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1330"
            android:background="@drawable/shape3"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:gravity="center"
            android:weightSum="5.5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:text="아이디 찾기"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <EditText
                    android:id="@+id/et_name_id"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:background="@drawable/shape3"
                    android:hint="이름을 입력하세요."
                    android:textColorHint="#ff000000"
                    android:minWidth="200dp"
                    android:paddingLeft="10dp"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="15dp" />

                <requestFocus />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <EditText
                    android:id="@+id/et_studentId"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:textColorHint="#ff000000"

                    android:background="@drawable/shape3"
                    android:hint="학번을 입력하세요"
                    android:inputType="number"
                    android:minWidth="200dp"
                    android:paddingLeft="10dp"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <Button
                    android:text="아이디 찾기"
                    android:id="@+id/btn_findId"
                    android:textColor="#ff000000"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/shape3" />

            </LinearLayout>

        </LinearLayout> <!-- 세로 5cm 끝 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1230"
            android:background="@drawable/shape3"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:gravity="center"
            android:weightSum="6.5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:text="비밀번호 찾기"
                    android:textAlignment="center"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/et_id"
                    android:hint="아이디를 입력하세요."
                    android:paddingLeft="10dp"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:textSize="15dp"
                    android:textColorHint="#ff000000"

                    android:textColor="@color/black"
                    android:background="@drawable/shape3"
                    android:textCursorDrawable="@drawable/cursor"
                    android:minWidth="200dp"
                    android:inputType="number"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/et_name_pwd"
                    android:hint="이름을 입력하세요."
                    android:textColorHint="#ff000000"

                    android:paddingLeft="10dp"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:textSize="15dp"
                    android:background="@drawable/shape3"
                    android:textCursorDrawable="@drawable/cursor"
                    android:minWidth="200dp"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/et_student_pwd"
                    android:hint="학번을 입력하세요."
                    android:textColorHint="#ff000000"

                    android:paddingLeft="10dp"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:textSize="15dp"
                    android:background="@drawable/shape3"
                    android:textCursorDrawable="@drawable/cursor"
                    android:minWidth="200dp"
                    android:inputType="number"/>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1">

                <Button
                    android:text="비밀번호 찾기"
                    android:textColor="#ff000000"
                    android:id="@+id/btn_findPwd"
                    android:background="@drawable/shape3"
                    android:layout_width="100dp"
                    android:layout_height="30dp" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>

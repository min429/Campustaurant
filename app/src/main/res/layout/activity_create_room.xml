<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/empty_toolbar"/>
        <!--상단고정알림-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center"
            android:background="@color/PColor2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Create Room"
                android:textSize="28dp">
            </TextView>
        </LinearLayout>
        <!--방제목-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Room Title"
                android:textColor="@color/black"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/et_roomName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape3"
                android:hint="Enter a title to show people."
                android:maxLength="24"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="14sp"
                android:padding="8dp">
            </EditText>
        </LinearLayout>
        <!--방 설정하기-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Room Setting"
                android:textColor="@color/black"
                android:textSize="18sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:layout_marginRight="5dp"
                            android:orientation="vertical"
                            android:weightSum="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Type"
                                android:textColor="@color/black"
                                android:textSize="14dp"></TextView>
                            <Spinner
                                android:id="@+id/spinner1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:spinnerMode="dropdown"
                                android:layout_weight="1"
                                android:background="@drawable/spinner_background">
                            </Spinner>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.17"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:orientation="vertical"
                            android:weightSum="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Food"
                                android:textColor="@color/black"
                                android:textSize="14dp"></TextView>
                            <Spinner
                                android:id="@+id/spinner2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:spinnerMode="dropdown"
                                android:layout_weight="1"
                                android:background="@drawable/spinner_background"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.12"
                            android:gravity="center"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical"
                            android:weightSum="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Restaurant"
                                android:textColor="@color/black"
                                android:textSize="14dp"></TextView>
                            <Spinner
                                android:id="@+id/spinner3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:spinnerMode="dropdown"
                                android:layout_weight="1"
                                android:background="@drawable/spinner_background">
                            </Spinner>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:layout_marginTop="10dp"
                    android:background="@color/black"
                    android:backgroundTint="#44000000">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageButton
                                android:id="@+id/ib_enter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:background="@drawable/tagplus">
                            </ImageButton>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Add tag"
                                android:textSize="12sp">
                            </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="6dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="2dp"
                                android:layout_weight="0.1">

                                <!--recyclerview: 많은 수의 데이터 집합을, 제한된 영역 내에서 유연하게(flexible) 표시할 수 있도록 만들어주는 위젯-->
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rv_tag"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:scrollbarFadeDuration="0"
                                    android:scrollbarSize="5dp"
                                    android:scrollbarThumbVertical="@android:color/darker_gray"
                                    android:scrollbars="horizontal">
                                </androidx.recyclerview.widget.RecyclerView>
                            </LinearLayout>
                            <EditText
                                android:id="@+id/et_tag"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1"
                                android:layout_marginTop="2dp"
                                android:paddingLeft="6dp"
                                android:background="@drawable/shape6"
                                android:hint="Please enter a tag."
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black">
                            </EditText>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
        <!--지도보기-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:shadowColor="@color/black"
            android:shadowDx="-7.0"
            android:shadowDy="7.0"
            android:text="Map"
            android:textColor="@color/black"
            android:textSize="24sp" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="vertical">

            <com.naver.maps.map.MapView
                android:id="@+id/mv_naver"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>

            <ImageView
                android:id="@+id/iv_map"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="20dp"
                android:layout_gravity="right"
                android:src="@drawable/location">
            </ImageView>

        </FrameLayout>
        <!--등록하기-->
        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape3"
            android:backgroundTint="@color/PColor2"
            android:text="Submit"
            android:textSize="36dp"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        </Button>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
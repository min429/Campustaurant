<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/shape3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/img_roomfoodpic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@drawable/imageshape"
                        android:src="@drawable/bossam"><!--둥글게 : java파일 roomfoodpic.clipToOutline = true추가-->
                    </ImageView>
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="보쌈"
                        android:textSize="20sp">
                    </TextView>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="6dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape2"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Title"
                            android:textSize="12sp"
                            android:padding="2dp"
                            android:background="@color/PColor2">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start">
                        <TextView
                            android:id="@+id/tv_roomname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guys, let's eat WRYYYY!!!!!"
                            android:maxLines="1"
                            android:layout_marginLeft="4dp"
                            android:textSize="12sp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:ellipsize="end">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape2"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textSize="12sp"
                            android:padding="2dp"
                            android:background="@color/PColor2">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start">
                        <TextView
                            android:id="@+id/tv_roomrestaurantname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="대동집"
                            android:maxLines="1"
                            android:layout_marginLeft="4dp"
                            android:textSize="12sp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:ellipsize="end">
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape2"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_roomtag1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="# Come in five minutes # Don't be late # talkative friends # funny friends  # regardless of gender!!"
                        android:textSize="12sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_joinroom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape3"
            android:backgroundTint="#00ff0000"/><!--투명하게 ( 맨위에 버튼놓임 )-->
    </FrameLayout>
</LinearLayout>